{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,                        /* Enable all strict type-checking options. */
    "noImplicitAny": false, 
    "strictFunctionTypes": false, 
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src", "api.d.ts"],
  "exclude": ["node_modules", "dist"]
}
